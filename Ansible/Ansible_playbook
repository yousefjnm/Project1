---
  - hosts: localhost
    tasks:
        - name: install apache2
          become: true
          apt:
             name: apache2
             state: latest
             force_apt_get: yes
             update_cache: yes

        - name: start apache2
          service:
                name: apache2
                state: started

        - name: installs php and dependencies
          become: true
          apt:
            pkg:
              - php
              - libapache2-mod-php
              - php-mysql
              - php7.2-cli
              - php7.2-curl
              - php7.2-gd
              - php7.2-mbstring
              - php7.2-mysql
              - php7.2-xml
            state: latest
            force_apt_get: yes
            update_cache: yes

        - name: restart apache2
          become: true
          service:
                name: apache2
                state: restarted

        - name: copy 000-default.conf
          become: true
          copy:
            src: ./000-default.conf
            dest: /etc/apache2/sites-available

        - name: copy index.html
          become: true
          copy:
            src: ./index.html
            dest: /var/www/html

        - name: activate apache2 ssl
          become: true
          command: a2enmod ssl

        - name: restart apache2
          become: true
          service:
                name: apache2
                state: restarted
